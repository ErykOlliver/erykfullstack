generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SkillCategory {
  SOFT
  HARD
}

enum ProjectCategory {
  FULLSTACK
  FRONTEND
  BACKEND
  MOBILE
  GAME
  API
}

enum Status {
  EMANDAMENTO
  FINALIZADO
}

model Skill {
  id       Int           @id  @default(autoincrement())
  name     String        @unique
  category SkillCategory
  projects Project[]     @relation("ProjectSkills")
}

model Admin {
  id        Int      @id @unique @default(autoincrement())
  admin     String   @unique
  key       String
  createdAt DateTime @default(now())
}

model Project {
  id              String          @id @unique @default(uuid())
  poster          String
  title           String
  description     String
  slug            String
  github          String?
  page            String?
  status          Status          @default(EMANDAMENTO)
  designer        String
  designerPage    String
  applicationType String
  isFeatured      Boolean?        @default(false)
  category        ProjectCategory @default(FRONTEND)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  skills          Skill[]         @relation("ProjectSkills")
}
